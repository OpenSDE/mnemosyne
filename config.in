#Description: Mnemosyne Linux

const SDECFG_TRG_MNEMOSYNE ${target:-$SDECFG_TARGET}

case "$sdever" in
	2.1*)   CFGTEMP_TREE=21	;;
	2.2*)   CFGTEMP_TREE=22	;;
	2.3*)   CFGTEMP_TREE=23	;;
	6.0*)	CFGTEMP_TREE=22	;;
	7.0*)	CFGTEMP_TREE=23	;;
	trunk)	CFGTEMP_TREE=22 ;;
	vapor)	CFGTEMP_TREE=22 ;;
	*)      CFGTEMP_TREE=unknown	;;
esac

hack_stages() {
	local stage="$1----------"; shift
	local pkgs="$*"

	if [ $# -gt 1 ]; then
		pkgs="${pkgs// /\|}"
	elif [ $# -eq 1 ]; then
		true
	fi

	if [ "$pkgs" ]; then
		pkgfilter sed -e "s,^\(.\) [^ ]* \([^ ]*\) \([^ ]*\) \($pkgs\) ,\1 ${stage:0:10} \2 \3 \4 ,"
	fi
}

if [ ! -s $cfgtmpdir/mnemosyne.config.in ]; then

	if ! perl ./target/$SDECFG_TRG_MNEMOSYNE/mnemosyne.pl "./target/$SDECFG_TRG_MNEMOSYNE/pkgsel" TRG_MNEMOSYNE	\
		$cfgtmpdir/mnemosyne.{config,rules,awkgen}.in; then
		echo "mnemosyne.pl failed!"
		rm -f $cfgtmpdir/mnemosyne.{config,rules,awkgen}.in
	fi
fi

rm -f "$cfgtmpdir/mnemosyne.postpkgfilter.in"
if [ -s "$cfgtmpdir/mnemosyne.config.in" ]; then
	. "$cfgtmpdir/mnemosyne.rules.in"
	. "$cfgtmpdir/mnemosyne.config.in"
else
	comment ' '
	comment 'ERROR: plugins config was not rendered!'
	comment ' '
fi
